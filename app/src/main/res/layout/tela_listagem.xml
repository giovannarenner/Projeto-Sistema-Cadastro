<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Listagem de Usuário"
            android:background="@color/bege"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:textSize="45dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/texto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear"
        android:gravity="center"
        android:paddingLeft="150dp"
        android:text="Registros: 1/10"
        android:textColor="@color/black"
        android:textSize="30dp" />
    <TextView
        android:id="@+id/txtNomeLista"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texto"
        android:text="Nome:"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/edtNomeLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNomeLista"
        android:hint="[NOME] "
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/txtEnderecoLista"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtNomeLista"
        android:text="Endereço:"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/edtEnderecoLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtEnderecoLista"
        android:hint="[ENDEREÇO]"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/txtTelefoneLista"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEnderecoLista"
        android:text="Telefone:"
        android:textSize="30dp"
        />
    <EditText
        android:id="@+id/edtTelefoneLista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTelefoneLista"
        android:hint="[TELEFONE]"
        android:textSize="25dp"
        android:layout_marginTop="5dp"
        />
    <LinearLayout
        android:id="@+id/linear2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTelefoneLista">



    <Button
        android:id="@+id/btnAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTelefoneLista"
        android:text="Anterior"
        android:layout_marginLeft="70dp"
        android:padding="10dp"
        android:textSize="17dp"
        android:backgroundTint="@color/marrom"
        />
    <Button
        android:id="@+id/btnProximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTelefoneLista"
        android:text="Próximo"
        android:layout_marginLeft="50dp"
        android:padding="10dp"
        android:textSize="17dp"
        android:backgroundTint="@color/marrom"
        />
    </LinearLayout>
    <Button
        android:id="@+id/btnFechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2"
        android:text="Fechar"
        android:layout_marginLeft="165dp"
        android:textSize="17dp"
        android:padding="10dp"
        android:backgroundTint="@color/marrom"
        />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="203dp"
        android:layout_height="213dp"
        app:srcCompat="@drawable/user" />
</RelativeLayout>